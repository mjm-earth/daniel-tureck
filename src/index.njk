        Instagram
      </a>
      {% endif %}
      {% if cta.email %}
      <a href="mailto:{{ cta.email }}" class="btn btn--outline">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="M22 6L12 13L2 6"/></svg>
        Email
      </a>
      {% endif %}
    </div>
  </div>
</section>

<!-- Footer -->
<footer class="footer">
  <div class="footer__inner">
    <p class="footer__copy">&copy; 2026 {{ bio.name }}</p>
    <p class="footer__copy">Orange County, CA</p>
  </div>
</footer>
