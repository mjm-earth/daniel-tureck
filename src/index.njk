---
layout: base.njk
---

<!-- Hero -->
<section class="hero">
  <div class="container">
    <div class="hero__logo"></div>
    <h1 class="hero__name">{{ bio.name | replace(" ", "<br>") | safe }}</h1>
    <p class="hero__subtitle">{{ bio.headline }}</p>
  </div>
</section>

<!-- Photo + Phrase -->
<section class="photo-phrase">
  <div class="container">
    <div class="photo-large">
      <img src="{{ bio.photo | url }}" alt="{{ bio.name }}" width="1920" height="1280" decoding="async">
    </div>
    <h2 class="phrase">{{ bio.phrase }}</h2>
  </div>
</section>

<!-- Narrative -->
<section class="narrative">
  <div class="container">
    <div class="narrative__content">
      <h3 class="narrative__heading">{{ narrative.heading }}</h3>
      <div class="narrative__text">
        {% for paragraph in narrative.paragraphs %}
        <p>{{ paragraph }}</p>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<!-- Photo Grid -->
<section class="photo-grid">
  <div class="container">
    <div class="photo-grid__grid">
      {% for photo in photos.grid %}
      <div class="photo-grid__item">
        <img src="{{ photo.image | url }}" alt="{{ photo.alt }}" width="1920" height="1280" loading="lazy" decoding="async">
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Studio -->
<section class="studio">
  <div class="container">
    <div class="studio__content">
      <div class="studio__text">
        <p class="section-label">The Space</p>
        <h3 class="studio__heading">{{ studio.heading }}</h3>
        {% for paragraph in studio.paragraphs %}
        <p>{{ paragraph }}</p>
        {% endfor %}
      </div>
      <div class="studio__photo">
        <img src="{{ studio.image | url }}" alt="{{ studio.name }}" width="1920" height="1280" loading="lazy" decoding="async">
      </div>
    </div>
  </div>
</section>

<!-- Listen -->
<section class="listen">
  <div class="container">
    <p class="section-label">The Work</p>
    <h2 class="listen__heading">Listen</h2>
    <p class="listen__artists">{{ tracks.artists }}</p>

    {% if tracks.player_embed %}
    <div class="player-embed">
      {{ tracks.player_embed | safe }}
    </div>
    {% else %}
    <div class="player-embed">
      <p>Player Embed</p>
    </div>
    {% endif %}

    <a href="{{ tracks.credits_link }}" target="_blank" rel="noopener" class="credits-link">
      {{ tracks.credits_text }}
      <svg width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><path d="M7 17L17 7M17 7H7M17 7V17"/></svg>
    </a>
  </div>
</section>

<!-- Wide Photo -->
<section class="wide-photo">
  <div class="wide-photo__inner">
    <img src="{{ photos.wide.image | url }}" alt="{{ photos.wide.alt }}" width="1920" height="823" loading="lazy" decoding="async">
  </div>
</section>

<!-- CTA -->
<section class="cta">
  <div class="container">
    <h2 class="cta__heading">{{ cta.heading }}</h2>
    <div class="cta__buttons">
      {% if cta.instagram_url %}
      <a href="{{ cta.instagram_url }}" target="_blank" rel="noopener" class="btn btn--white">
