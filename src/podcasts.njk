---
layout: base.njk
pageTitle: "Podcast & Brand Audio | Daniel Tureck - Mix Engineer, Editor, Sound Designer"
pageDescription: "Daniel Tureck is a podcast mix engineer, editor and sound designer based in Long Beach, CA. Clients include Audible, Disney, Hulu, Vox Media, MSNBC, iHeart Media, Spotify and more."
---

<!-- Structured Data: ProfessionalService -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "{{ bio.name }} — Podcast & Brand Audio",
  "provider": {
    "@type": "Person",
    "name": "{{ bio.name }}",
    "url": "{{ site.url }}/"
  },
  "url": "{{ site.url }}/podcasts/",
  "description": "{{ podcasts_page.description }}",
  "areaServed": "Worldwide",
  "serviceType": [{% for service in podcasts_page.services %}"{{ service.name }}"{% if not loop.last %}, {% endif %}{% endfor %}],
  "brand": [{% for item in brands.items %}"{{ item.name }}"{% if not loop.last %}, {% endif %}{% endfor %}],
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Long Beach",
    "addressRegion": "CA",
    "addressCountry": "US"
  }
}
</script>

<!-- Page Hero -->
<section class="page-hero">
  <div class="page-hero__content">
    <p class="page-hero__name">{{ bio.name }}</p>
    <h1 class="page-hero__title">Podcasts & Brands</h1>
  </div>
</section>

<!-- Intro -->
<section class="page-intro">
  <div class="container">
    <div class="page-intro__grid">
      <p class="page-intro__text">{{ podcasts_page.intro }}</p>
      <div class="page-intro__photo">
        <img src="{{ '/assets/images/picks/contact-9539.jpg' | url }}" alt="Daniel Tureck — podcast mix engineer at Robot Slap Studios" width="800" height="1200" decoding="async" loading="lazy">
      </div>
    </div>
  </div>
</section>

<!-- Services -->
<section class="services">
  <div class="container">
    <h2 class="section-label">Services</h2>
    <div class="services__grid">
      {% for service in podcasts_page.services %}
      <div class="services__item">
        <div class="services__icon">
          {% if service.icon == "mixing" %}
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><line x1="4" y1="21" x2="4" y2="14"/><line x1="4" y1="10" x2="4" y2="3"/><line x1="12" y1="21" x2="12" y2="12"/><line x1="12" y1="8" x2="12" y2="3"/><line x1="20" y1="21" x2="20" y2="16"/><line x1="20" y1="12" x2="20" y2="3"/><line x1="1" y1="14" x2="7" y2="14"/><line x1="9" y1="8" x2="15" y2="8"/><line x1="17" y1="16" x2="23" y2="16"/></svg>
          {% elif service.icon == "editing" %}
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="6" cy="6" r="3"/><path d="M8.12 8.12L12 12"/><path d="M20 4L8.12 15.88"/><circle cx="6" cy="18" r="3"/><path d="M14.8 14.8L20 20"/></svg>
          {% elif service.icon == "sound-design" %}
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M2 12h2l3-9 3 18 3-12 3 6 2-3h4"/></svg>
          {% elif service.icon == "mastering" %}
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"/><path d="M15.54 8.46a5 5 0 0 1 0 7.07"/><path d="M19.07 4.93a10 10 0 0 1 0 14.14"/></svg>
          {% elif service.icon == "scoring" %}
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M9 18V5l12-2v13"/><circle cx="6" cy="18" r="3"/><circle cx="18" cy="16" r="3"/></svg>
          {% elif service.icon == "commercial" %}
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/><path d="M13.73 21a2 2 0 0 1-3.46 0"/><line x1="12" y1="2" x2="12" y2="4"/></svg>
          {% endif %}
        </div>
        <h3 class="services__name">{{ service.name }}</h3>
        <p class="services__desc">{{ service.description }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Clients -->
<section class="brands">
  <div class="container">
    <h2 class="section-label">Clients</h2>
    <div class="brands__grid">
      {% for item in brands.items %}
      <div class="brands__item">
        <span class="brands__name">{{ item.name }}</span>
        <span class="brands__projects">{{ item.projects | join(" / ") }}</span>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- CTA -->
<section class="page-cta">
  <div class="container">
    <p class="page-cta__text">Interested in working together on a podcast or branded audio project?</p>
    <a href="mailto:{{ cta.email }}" class="btn btn--orange">Get in Touch</a>
  </div>
</section>
